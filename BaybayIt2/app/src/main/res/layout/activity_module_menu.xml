<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModuleMenuActivity">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:background="@drawable/background_border_2">

        <TextView
            android:id="@+id/lblModuleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="120dp"
            android:text="Module 1" />

        <RelativeLayout
            android:id="@+id/rlChar1"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignTop="@+id/imageView17"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                app:srcCompat="@drawable/a" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/e" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                app:srcCompat="@drawable/o" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlChar2"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:visibility="visible"
            android:layout_above="@+id/lblModuleDesc"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/ivChar1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                app:srcCompat="@drawable/ba" />

            <ImageView
                android:id="@+id/ivChar2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="66dp"
                app:srcCompat="@drawable/be" />

            <ImageView
                android:id="@+id/ivChar3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="64dp"
                app:srcCompat="@drawable/bo" />

            <ImageView
                android:id="@+id/ivChar4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="4dp"
                app:srcCompat="@drawable/b" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lblModuleDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="94dp"
            android:layout_marginBottom="40dp"
            android:text="Ang mga Patinig"
            android:textAlignment="center" />
    </RelativeLayout>


    <Button
        android:id="@+id/btnStart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:background="@color/colorAccent"
        android:text="Simulan"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:background="@color/colorAccent"
        android:text="Pagsusulit"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>